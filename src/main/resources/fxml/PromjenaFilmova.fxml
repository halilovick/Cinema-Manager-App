<GridPane fx:id="PromjenaFilmovaPage" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.Controllers.PromjenaFilmovaController">
    <stylesheets>
        <URL value="@config.css"/>
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label alignment="CENTER" text="Promjena filmova" GridPane.halignment="CENTER">
            <font>
                <Font name="Arial Rounded MT Bold" size="43.0" />
            </font>
        </Label>
        <Button fx:id="dodajFilmButton" mnemonicParsing="false" onAction="#dodajFilmButtonClick" prefHeight="63.0"
                prefWidth="176.0" text="Dodaj film" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        <Button fx:id="urediFilmButton" mnemonicParsing="false" onAction="#urediFilmButtonClick" prefHeight="63.0"
                prefWidth="176.0" text="Uredi film" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
